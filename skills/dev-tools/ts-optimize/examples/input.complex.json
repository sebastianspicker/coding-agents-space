{
  "project": {
    "root": "/workspace",
    "tsconfigPath": "/workspace/tsconfig.json"
  },
  "actions": [
    {
      "type": "debug",
      "debugLevel": "complex"
    },
    {
      "type": "dedupe",
      "dedupe": {
        "minTokens": 80,
        "strategy": "token-hash"
      }
    },
    {
      "type": "refactor",
      "applyFixes": true,
      "refactorGoals": [
        "prefer-const",
        "reduce-any",
        "simplify-control-flow"
      ]
    },
    {
      "type": "recommend",
      "recommendFocus": [
        "numerics",
        "perf",
        "bundle",
        "types"
      ]
    }
  ]
}
