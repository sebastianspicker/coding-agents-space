{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ps1-optimize output",
  "type": "object",
  "additionalProperties": false,
  "required": ["success", "metadata", "logs"],
  "properties": {
    "success": { "type": "boolean" },
    "data": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "findings": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["kind", "severity", "message"],
            "properties": {
              "kind": {
                "type": "string",
                "enum": ["diagnostic", "lint", "refactor", "migration", "codegen", "recommendation"]
              },
              "severity": { "type": "string", "enum": ["info", "warn", "error"] },
              "message": { "type": "string" },
              "file": { "type": "string" },
              "range": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "startLine": { "type": "integer", "minimum": 1 },
                  "startCol": { "type": "integer", "minimum": 1 },
                  "endLine": { "type": "integer", "minimum": 1 },
                  "endCol": { "type": "integer", "minimum": 1 }
                }
              },
              "ruleId": { "type": "string" },
              "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
              "suggestedFix": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "title": { "type": "string" },
                  "patch": { "type": "string", "description": "Unified diff patch (optional)" }
                }
              }
            }
          }
        },
        "patches": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["path", "patch"],
            "properties": {
              "path": { "type": "string" },
              "patch": { "type": "string" }
            }
          }
        },
        "metrics": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "filesAnalyzed": { "type": "integer", "minimum": 0 },
            "diagnostics": { "type": "integer", "minimum": 0 },
            "lintIssues": { "type": "integer", "minimum": 0 },
            "patchesGenerated": { "type": "integer", "minimum": 0 },
            "filesModified": { "type": "integer", "minimum": 0 }
          }
        }
      }
    },
    "error": {
      "type": "object",
      "additionalProperties": false,
      "required": ["code", "message"],
      "properties": {
        "code": { "type": "string" },
        "message": { "type": "string" },
        "details": {}
      }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "required": ["tool_version", "execution_time_ms"],
      "properties": {
        "tool_version": { "type": "string" },
        "execution_time_ms": { "type": "integer", "minimum": 0 }
      }
    },
    "logs": { "type": "array", "items": { "type": "string" } }
  }
}
